{
    "version": 2,
    "builds": [
      { "src": "public/**", "use": "@vercel/static" },
      { "src": "api/app.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/app.js" },
      { "src": "/(.*)", "dest": "/public/$1" }
    ], 
    "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  }
  }
